(function(a){a.imgZoom=function(f){var d=a.extend({clickObj:f.obj,imgSrc:f.imgSrcObj,curIndex:f.cInd},f);var p=d.clickObj.siblings(".photo_box"),e=p.find(".show_left_bar"),i=p.find(".show_right_bar"),r=p.find(".show_left"),j=p.find(".show_right"),o=p.find(".show_center"),g=p.find(".show-small-left"),h=p.find(".show-small-right"),s=p.find(".photo_s_list"),l=s.find("li"),n=l.length,v=p.find(".photo_big"),m=v.find("img"),k=d.curIndex;var u=d.imgSrc,t=k,q=0;function b(c){if(q){return}q=1;m.attr("src",u[c]);if(a.isIE6){var w=new Image();w.onload=function(){var x=w.width,y=w.height,z=450*y/x;if(x>450){m.css("width","450px")}else{m.css("width","auto")}w=null};w.src=u[c]}l.removeClass("active").eq(c).addClass("active");if(t!==c){v.find("li").css("opacity","0").animate({opacity:"1"},{duration:500})}if(c===0&&c===n-1){g.addClass("show-small-left-disable");h.addClass("show-small-right-disable");r.remove();j.remove();o.css({width:"100%",left:"0"})}else{if(c===0){g.addClass("show-small-left-disable");h.removeClass("show-small-right-disable")}else{if(c===n-1){g.removeClass("show-small-left-disable");h.addClass("show-small-right-disable")}else{g.removeClass("show-small-left-disable");h.removeClass("show-small-right-disable")}}}t=c;q=0}b(k);e.click(function(){if(k<0){k=0}if(k>n-1){k=n-1}k--;if(k<1){g.addClass("show-small-left-disable")}if(k<0){return}b(k)});i.click(function(){if(k<0){k=0}if(k>n-1){k=n-1}k++;if(k>n-2){h.addClass("show-small-right-disable")}if(k>n-1){return}b(k)});l.click(function(){var c=a(this).index()-2;k=c;if(k<1){g.addClass("show-small-left-disable")}if(k>n-2){h.addClass("show-small-right-disable")}b(c)});o.click(function(){p.remove();d.clickObj.show()})}})(jQuery);